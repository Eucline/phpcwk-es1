{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h2>{{ page_heading_2 }}</h2>
        <p>{{ page_text }}</p>
        <form action="{{ action }}" method={{ method }}>
            <fieldset>
                <legend>Retrieve messages form</legend>
                <br>
                <label for="username">Username:</label>
                <input id="username" name="username" type="text" value="{{ initial_input_box_value }}" size="10" maxlength="50">
                <br><br>

                <label for="password">Password:</label>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="10" maxlength="50">

                <label for="mnumber">Number of messages to be read:</label>
                <input id="mnumber" name="mnumber" type="number" value="{{ initial_input_box_value }}" size="10" maxlength="50">


                <br><br>
                <h3>{{ page_heading_3 }}</h3>
                <br><br>
                <input type="submit" value="Retrieve messages >>>">
            </fieldset>
        </form>
        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>
    </div>
{% endblock %}
